<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="stylesheet" href="styles/styles.css">

</head>
<body>


    <div class="box" id="heading">
        <h1><%= typeOfDay %> </h1>
    </div>

    <div class="box">
            <% for (var i=0; i<listOfItems1.length; i++) { %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= listOfItems1[i].name %></p>
                </div>            
            <% } %>

            <form class="item" action="/" method="post">
                <input placeholder="add item" type="text" name="listItem" id="">
                <button id="submit_button" type="submit">+</button>
            </form>
    </div>

    <div class="cleartdl">
        <form action="/clear" method="post">
            <button id="clear_button" type="submit">Clear Data</button>
        </form>
    </div>

    
    
</body>
</html>